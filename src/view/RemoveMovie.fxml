<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RemoveMovieController">

  
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
   <children>
      <TableView fx:id="tblMovies" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="tblColMovieTitle" prefWidth="250.0" text="C1" />
          <TableColumn fx:id="tblColMovieYear" prefWidth="75.0" text="C2" />
          <TableColumn fx:id="tblColMovieGenre" prefWidth="75.0" text="Column X" />
          <TableColumn fx:id="tblColMoviePrice" prefWidth="75.0" text="Column Y" />
        </columns>
      </TableView>
      <TextArea fx:id="txtRemoveMovieMessage" minHeight="50.0" prefHeight="50.0" />
      <Button fx:id="btnRemoveMovie" onAction="#removeMovie" mnemonicParsing="false" text="Remove Movie" />
      <Button fx:id="btnCloseRemoveMovie" onAction="#closeRemoveMovie" mnemonicParsing="false" text="Exit" />
   </children>
</VBox>
